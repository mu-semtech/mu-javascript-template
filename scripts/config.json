{
  "version": "0.2",
  "scripts": [
    {
      "documentation": {
        "command": "dev-script",
        "description": "Outputs a development script to use in docker-compose",
        "arguments": []
      },
      "environment": {
        "interactive": false,
        "script": "dev-script/run.sh"
      },
      "mounts": {
        "service": "/data/service"
      }
    },
    {
      "documentation": {
        "command": "setup-ide",
        "description": "Installs combined node modules of service and template",
        "arguments": []
      },
      "environment": {
        "interactive": false,
        "script": "setup-ide/run.sh"
      },
      "mounts": {
        "service": "/app"
      }
    },
    {
      "documentation": {
        "command": "add-delta-handler",
        "description": "Sets up the delta handler for the scripts",
        "arguments": []
      },
      "environment": {
        "image": "ubuntu:25.10",
        "interactive": false,
        "script": "add-delta-handler/run.sh"
      },
      "mounts": {
        "service": "/app"
      }
    }
  ]
}
